  <head>
    {{ content_for_header }}
    {{ 'base.css' | asset_url | stylesheet_tag }}
  </head>

  <body class="gradient">
    {% section 'announcement-bar' %}
    {% render 'header-bar' %}
    {% section 'header' %}
